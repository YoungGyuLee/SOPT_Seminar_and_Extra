<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yg.sopt25th.appjam.AppJamActivity">


    <View
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/temp_view1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#999999"
        >
    </View>

    <View
        android:id="@+id/time1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/temp_view1"
        app:layout_constraintStart_toStartOf="@+id/temp_view1"
        app:layout_constraintEnd_toEndOf="@+id/temp_view1"
        app:layout_constraintBottom_toBottomOf="@+id/temp_view1"
        android:background="#00ff00"
        >
    </View>

    <View
        android:id="@+id/time2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/temp_view1"
        app:layout_constraintStart_toStartOf="@+id/temp_view1"
        app:layout_constraintEnd_toEndOf="@+id/temp_view1"
        app:layout_constraintBottom_toBottomOf="@+id/temp_view1"
        android:background="#0000ff"
        >
    </View>



</androidx.constraintlayout.widget.ConstraintLayout>
